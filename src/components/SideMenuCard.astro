---
import type { Playlist } from "@/lib/data";

interface Props{
    playlist: Playlist
}

const { playlist } = Astro.props
const { id, cover, title, artists, color } = playlist
const artistsList = new Intl.ListFormat().format(artists)
---

<a 
    href={`/playlist/${id}`} 
    class="playlist-item flex relative p-2 overflow-hidden gap-5 items-center rounded-md hover:bg-zinc-800">
    <picture>
        <img 
            src={cover}
            alt={`Cover of ${title} by ${artistsList}`}
            class="h-12 w-12 flex-none">
        </img>
    </picture>
    <div class="flex flex-auto flex-col truncate">
        <h4 class="text-white text-sm">{title}</h4>
        <span class="text-xs text-gray-400">{artistsList}</span>
    </div>
</a>